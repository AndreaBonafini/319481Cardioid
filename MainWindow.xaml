<Window x:Class="_319481CulminatingProject.Cardioid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_319481CulminatingProject.Cardioid"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <StackPanel>
        <TextBlock>Enter the size of the lines:</TextBlock>
        <TextBox x:Name="txtLineSize">0.25</TextBox>
        <TextBox x:Name="txtDots" Visibility="Collapsed">360</TextBox>
        <TextBlock>Enter the Multiplication Factor:</TextBlock>
        <TextBox x:Name="txtMF">2</TextBox>
        <Button x:Name="btnCardioid" Content="Click for cardioid" Click="BtnCardioid_Click"/>
        <Button x:Name="btnIncreasingMF" Click="BtnIncreasingMF_Click" Visibility="Collapsed">Increasing Multiplication Factor</Button>
        <Canvas x:Name="canvas">
            
        </Canvas>
    </StackPanel>
</Window>
